{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src", "src/@types"]
}
